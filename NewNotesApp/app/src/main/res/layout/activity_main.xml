<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sqlTextView"
        android:layout_width="298dp"
        android:layout_height="148dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="291dp"
        android:text="TextView"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqlButton" />

    <Button
        android:id="@+id/sqlButton"
        android:layout_width="331dp"
        android:layout_height="97dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="57dp"
        android:text="GET SQL DATA"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/sqlTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notedList" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notedList"
        android:layout_width="408dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>